---
import SwitchColor from '../components/switchColor/SwitchColor.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Megrim&family=Montserrat+Subrayada&family=Titillium+Web:wght@400;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Megrim&family=Montserrat+Subrayada&family=Titillium+Web:wght@400;700&display=swap'); 

	:root {
		--dark-background: #000;
		--dark-color: #fff;

		--light-brackgound: #fff;
		--light-color: #000;

		--resaltColor: #f57932;

		--title-megrim: 'Megrim';
		--content-montserrat: 'Montserrat Subrayada', sans-serif;
		--content-titillium: 'Titillium Web', sans-serif;

	}
	
	html {
		font-family: system-ui, sans-serif;
		background-color: var(--dark-background);
		font-family: var(--title-megrim);
	}
</style>
